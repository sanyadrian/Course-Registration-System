@model IEnumerable<Lab6.DataAccess.AcademicRecord>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
    <tr>
        <th>

            <a asp-action="Index" asp-route-sortOrder="@ViewBag.CourseSort"> @Html.DisplayNameFor(model => model.CourseCodeNavigation.Title) </a>
        </th>
        <th>
            <a asp-action="Index" asp-route-sortOrder="@ViewBag.NameSort"> @Html.DisplayNameFor(model => model.Student.Name) </a>
        </th>
        <th>
            <a asp-action="Index"> @Html.DisplayNameFor(model => model.Grade) </a>
        </th>
        <th>
            <a asp-action="EditAll"> Edit All</a>
        </th>
    </tr>
</thead>

    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CourseCodeNavigation.Code) -  @item.CourseCodeNavigation.Title
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Student.Id) - @item.Student.Name
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Grade)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { Id=item.StudentId, Code=item.CourseCode  }) |
                @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
            </td>
        </tr>
}
    </tbody>
</table>
